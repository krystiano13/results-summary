<section class="result">
    <h1>Your Result</h1>
    <div class="score">
        <p class="score__value">76</p>
        <p class="score__max">of 100</p>
    </div>
    <h2>Great</h2>
    <p class="desc">You scored higher than 65% of the people who have taken these tests.</p>
</section>

<style lang="scss">
  .result {
    width : 50%;
    background: linear-gradient(0deg,var(--Light-royal-blue),var(--Light-slate-blue));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 2rem;
    text-align: center;

    @media screen and (max-width : 800px) and (orientation: portrait) {
      width : 100%;
      border-top-left-radius: 0rem;
      border-top-right-radius: 0rem;
      padding-bottom: 1rem;
      height: 45%;
    }

    .score {
      background: linear-gradient(0deg,transparent, var(--Violet-blue));
      border-radius: 100%;
      width : 12rem;
      height : 12rem;

      @media screen and (max-width : 800px) and (orientation: portrait) {
        width : 10rem;
        height : 10rem;
      }

      @media screen and (max-width : 400px) {
        width : 8rem;
        height : 8rem;
      }

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      margin-top : .5rem;
      margin-bottom: .5rem;

      &__value {
        color: var(--Pale-blue);
        font-weight: 800;
        font-size: 4rem;

        @media screen and (max-width: 600px) {
          font-size: 2rem;
        }
      }

      &__max {
        color: var(--Light-lavender);
      }
    }

    h1 {
      width : 100%;
      text-align: center;
      color: var(--Light-lavender);
      font-size : 1.4rem;
      margin-top : .75rem;
      margin-bottom: .75rem;

      @media screen and (max-width: 600px) {
        font-size : 1.1rem;
        margin-top : 0.25rem;
        margin-bottom: 0.25rem;
      }
    }

    h2 {
      width : 100%;
      text-align: center;
      color: var(--Pale-blue);
      font-size : 2rem;
      margin-top : .75rem;
      margin-bottom: .75rem;

      @media screen and (max-width: 600px) {
        font-size : 1.3rem;
        margin-top : 0.25rem;
        margin-bottom: 0.25rem;
      }
    }

    .desc {
      color: var(--Light-lavender);
      text-align: center;
      max-width: 70%;
      margin-top : .75rem;
      margin-bottom: .75rem;
      font-size : 1.1rem;

      @media screen and (max-width: 600px) {
        font-size : 1rem;
        margin-top : 0.25rem;
        margin-bottom: 0.25rem;
      }
    }
  }
</style>